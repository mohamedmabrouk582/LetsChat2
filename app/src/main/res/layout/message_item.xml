<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_5sdp"
    >
    <LinearLayout
        android:id="@+id/send_layout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/msg_background_send"
        android:padding="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        >
        <TextView
            android:id="@+id/txt_msg_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/txt_msg_time_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_gravity="right"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rec_layout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/msg_background_receved"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"

        >
        <TextView
            android:id="@+id/txt_msg_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            />
        <TextView
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/txt_msg_time_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_gravity="right"
            android:textColor="@color/white"
            />
    </LinearLayout>





</LinearLayout>